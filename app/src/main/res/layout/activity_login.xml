<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.imrozquazi.cover_flow.Login"
    android:background="@drawable/android_color_gradient_list"
    android:id="@+id/login_layout"

     >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
     >
    <AutoCompleteTextView
        android:id="@+id/login_user"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittextcorners"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:hint="  Username"
        android:inputType="textAutoComplete"
        android:paddingLeft="15dp" />

    <AutoCompleteTextView
        android:id="@+id/login_pass"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextcorners"
        android:drawableLeft="@drawable/ic_password"
        android:gravity="center_vertical"
        android:hint="   Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp" />



    <Button
        android:id="@+id/btnsignuplogin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttoncorners"
        android:drawableRight="@drawable/ic_login"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Login"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="Reset"
        android:text="forgot password..??"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="signup"
        android:text="Not yet Signed Up...??..Click Here"
        android:textColor="#fff"
        android:textStyle="bold"

        />
</LinearLayout>

</RelativeLayout>
